<p id="notice"><%= notice %></p>

<h1>Listing Time Cards</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Date</th>
      <th>Morning In</th>
      <th>Morning Out</th>
      <th>Afternoon In</th>
      <th>Afternoon Out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_cards.each do |time_card| %>
      <tr>
        <td><%= time_card.employee_id %></td>
        <td><%= time_card.date %></td>
        <td><%= time_card.morning_in %></td>
        <td><%= time_card.morning_out %></td>
        <td><%= time_card.afternoon_in %></td>
        <td><%= time_card.afternoon_out %></td>
        <td><%= link_to 'Show', time_card %></td>
        <td><%= link_to 'Edit', edit_time_card_path(time_card) %></td>
        <td><%= link_to 'Destroy', time_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

